div.payment_dialog.payment_dialog--closed
  div.payment_dialog-content
    div.payment_dialog-notification.payment_dialog-notification--closed
    div.payment_dialog-content__header
      div.payment_dialog-content__header-title  Payment
      div.payment_dialog-content__header-close-button
        <svg viewBox="0 0 24 24" ><path d='M19 6.41 17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z'></path></svg>
    div.payment_dialog-content__payment-methods
      button.payment_dialog-content__payment-methods__google-pay  
        include ../svgs/google.svg
        | Google pay
      button.payment_dialog-content__payment-methods__apple-pay
        include ../svgs/apple.svg
        | Apple pay  
      div.payment_dialog-content__payment-methods__card
        div.payment_dialog-content__payment-methods__card-caption Card information
        input.payment_dialog-content__payment-methods__card-number.input(placeholder='Card number',name='card_name')
        div
          input.payment_dialog-content__payment-methods__card-date.input(placeholder='Date',name='date')
          input.payment_dialog-content__payment-methods__card-cvc.input(placeholder='CVC',type='number',name='cvc')
        button.payment_dialog-content__payment-methods__card-confirm.button--contained Confirm

      

