            div.footer-content-about__schedule 
              p Monday – Saturday: 8:00 am – 4:00pm
              p Sunday: 9:00 am – 5:00pm
          div.footer-content-info
            div.footer-content-info__links 
              div.footer-content-info__links-title Quick links
              div.footer-content-info__links-content
                -var  quickLinksArr = [{href:'about_us',caption:'About us'},{href:'blog',caption:'Blog'},{href:'check_out',caption:'Check out'},{href:'contact',caption:'Contact'}]
                  each item in quickLinksArr
                    a(href=item.href) #{item.caption}
