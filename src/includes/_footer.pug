                    a(href=categoriesItem.href) #{categoriesItem.caption}
            div.footer-content-info__links 
              div.footer-content-info__links-title Help Center
              div.footer-content-info__links-content
                -var  helpCenterArr =   [{href:'Privacy Policy',caption:'Privacy Policy'},{href:'Terms & Conditions',caption:'Terms & Conditions'},{href:'Returns Policy',caption:'Returns Policy'},{href:'Help & FAQs',caption:'Help & FAQs'}]
                  each helpCenterItem in helpCenterArr
                    a(href=helpCenterItem.href ) #{helpCenterItem.caption}
