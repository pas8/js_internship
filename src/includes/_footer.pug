              div.footer-content-info__links-title Categories
              div.footer-content-info__links-content
                -var  footerCategoriesArr = [{href:'Fresh Fruits',caption:'Fresh Fruits'},{href:'Fresh Meats',caption:'Fresh Meats'},{href:'/grain_&_nuts',caption:'Grain & Nuts'},{href:'/smothie',caption:'Smothie'}]
